<div class="show"> 
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @post.name %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @post.author.full_name %>
  </p>

  <div class="btn btn-primary"><%= link_to 'Edit', edit_post_path(@post) %></div>
  <div class="btn btn-primary"><%= link_to 'Back', posts_path %></div>
</div>